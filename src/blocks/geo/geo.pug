mixin geo(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' geo--' + modsList[i].trim();
      }
    }

  .geo(class=allMods)&attributes(attributes)
    span.geo__we Мы
    img.geo__heart(src="img/heart.svg")
    span.geo__city Санкт-Петербург :-)
