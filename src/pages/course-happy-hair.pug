    {title: "Повысить эффективность своего кафе", descr: paragraph},
    {title: "Расширить свой бизнес", descr: paragraph}
    ]

    var quoteForWhome = {
      text: "Я&nbsp;приглашаю на&nbsp;курс начинающих предпринимателей, инвесторов, а&nbsp;также владельцев пекарен. Всех, кто хочет изменить дела к&nbsp;лучшему.",
      name: "Дмитрий Воробев",
      descr: "преподаватель курса",
      src: "img/alexandra-tuzova.jpg"
    }

    var chartItems = [
      {percent: "55", label: "Начинающие предприниматели", color: "red"},
      {percent: "34", label: "Инвесторы", color: "orange"},
      {percent: "11", label: "Владельцы салонов", color: "violet"}
    ]
