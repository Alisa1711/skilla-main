mixin quote(mods)

  //- Принимает:
  //-   mods    {string} - список модификаторов
  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' quote--' + modsList[i].trim();
      }
    }

  .quote(class=allMods)&attributes(attributes)
    .quote__inner
      p.quote__text Помещение и&nbsp;его расположение влияют на&nbsp;то, какая публика будет к&nbsp;вам приходить. Наряду с&nbsp;качеством и&nbsp;стоимостью услуг люди оценивают место и&nbsp;обустройство салона...
      .quote__author
        +avatar(class="quote__avatar")
        .quote__author-inner
          p.quote__author-name Мария Вершинина
          p.quote__author-descr владелец салона «Салон» преподаватель курса «<a class="link" href='javasript:void(0)'>Как открыть салон красоты</a>»
