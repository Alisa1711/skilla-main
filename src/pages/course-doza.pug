extends ../pug/layout.pug

block title
  title Как открыть кофе с собой

block header
  +header("course")

block content
  +course-hero(courseHero, "doza")
  +brand-photos(["img/brand-photos__doza-01.jpg", "img/brand-photos__doza-02.jpg", "img/brand-photos__doza-03.jpg"], "img/doza-logo.svg")
