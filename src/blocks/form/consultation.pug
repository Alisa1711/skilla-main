extends form-layout.pug
include ../curators/curators.pug

block data
  - var id = "consultation"
  - var formMods = "form--wide"
  - var backMods= "form__back--dark"

block overlay
  +curators
block prepend content-top
  - var stepsIndicator = true
block steps
  .form__step
    .form__title
      |Привет.
      br
      |Мы всегда рады помочь
    .form__row
      input.input(placeholder="Твое имя").form__row-input
      +button(label, "icon", "arrow-forward").form__row-button(name="next")
  .form__step
    .form__title Вася, оставь телефон для связи
    .form__row.form__row--responsive
      input.input(type="tel" placeholder="+7(").form__row-input
      +button("Получить консультацию", mods, icon=false, "button").form__row-button(name="next")
block done
  .form__done
    .form__done-inner
      .form__done-top
        .form__title Спасибо, мы перезвоним тебе течение рабочего дня
        .form__subtitle Рабочий день заканчивается через:
      .form__timer 03:43:29
      a.form__go-back(href="javascript:void(0);")
        +icon("arrow-back")
block bottom
  .form__phone
    a.form__phone-number.link(herf="tel:+78009235411")
      +icon("phone").form__phone-icon
      |8 (800) 923 54 11
    p.form__phone-descr Также отвечаем по&nbsp;телефону с&nbsp;9&nbsp;до&nbsp;18&nbsp;по&nbsp;Москве
