    +course-benefits(courseBenefits, "doza")
    +business-plan(tariffs, "doza")
  +for-whome(chartItems, quoteForWhome, "doza")
  +program(programDoza, programAuthor, "doza")
  +teachers
  +how-it-works(howItWorksSteps, "img/how-it-works__theme_doza.svg")
  +you-can(youCanData, "doza")
  +reviews(reviewCroud, "doza")
  +cost("doza", tabsMods="dark")
  +skilla-block("doza")

block footer
