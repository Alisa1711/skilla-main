extends form-layout.pug

block data
  - var id = "confirm"
  - var formMods = "form--light"
  - var backMods= "form__back--dark"
  - var formMixins = ""

block prepend content-top
  - var peopleCounter = "уже записалось 124 человека"
  - var stepsIndicator = true

block steps
  .form__step
    .form__title
      |Спасибо!
      br
      |Введи пароль из SMS
    .form__row.form__row--full
      input.input(type="password" placeholder="********").form__input
      +button("Войти", mods, "", tag="button").form__button(type="submit")
    p.form__hint Не пришел пароль? <a class="link" href="javascript:void(0)">Отправить еще раз</a>

block bottom-content
  p.form__bottom-descr В ближайшее время с тобой свяжется наш куратор
