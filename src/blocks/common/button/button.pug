mixin button(label="", mods="", icon, tag="a")

  //- Принимает:
  //-   label  {string} - надпись
  //-   mods    {string} - список модификаторов
  //-   icon    {string} - id иконки
  //-   tag    {string} - тег кнопки
  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' button--' + modsList[i].trim();
      }
    }

  if tag === "button"
    button.button(class=allMods)&attributes(attributes)
      if icon
        +icon(icon)
      = label
  if tag === "a"
    a.button(class=allMods href="javasript:void(0)")&attributes(attributes)
      if icon
        +icon(icon)
      = label
