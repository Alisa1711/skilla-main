extends ../pug/layout.pug

block title
  title Как открыть свой салон красоты

block header
  +header("course")

block content
  //- +course-hero
  +brand-photos(["img/brand-photos__happy-hair-01.jpg", "img/brand-photos__happy-hair-02.jpg", "img/brand-photos__happy-hair-03.jpg"])
  .happy-hair__bg-watercolor
    +course-benefits(courseBenefits, "happy-hair")
    +business-plan(tariffs, "happy-hair")
  +for-whome(chartItems, quoteForWhome)
  +program(programHappyHair)
  +teachers
  +how-it-works(howItWorksSteps, "img/how-it-works__theme_happy-hair.svg")
  +you-can(youCanData, "happy-hair")
  +reviews(reviewCroud, "happy-hair")
  +cost("happy-hair", tabsMod="dark")
  +skilla-block("happy-hair")

block footer
  +short-footer("dark,bg_happy-hair")

block prepend modals
  +course-nav(courseNav)
  include ../blocks/forms/form/sign-up-course
  include ../blocks/forms/form/sign-up
  include ../blocks/forms/form/consultation
  include ../blocks/forms/form/confirm
  include ../blocks/forms/form/login


