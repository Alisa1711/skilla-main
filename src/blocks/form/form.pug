mixin form(type="sign-up-course", mods)

  //- Принимает:
  //-   type    {"sign-up-course", "confirm", "conslult", "login"} - список модификаторов
  //-   mods    {string} - список модификаторов
  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' sign-up-course--' + modsList[i].trim();
      }
    }

  if type === "sign-up-course"
    .form.modal(class=allMods)&attributes(attributes)
      .form__inner

        .form__overlay
          button.form__back.modal__close(class=allMods)&attributes(attributes)
            +icon("arrow-back").form__back-arrow
            +logo.form__back-logo
          p.form__message
            |Запустить
            |
            span.form__message-accent салон красоты
            |
            |со&nbsp;Skilla проще и&nbsp;дешевле

        .form__content
          img.form__clouds(src="img/sign-up__clouds.svg")
          .form__content-inner
            .form__content-top
              p.form__people-counter уже записалось 124 человека
              .form__steps-indicator
                - for (var i = 0; i < 2; i++)
                  span.form__steps-indicator-item
            +form-author.form__author
            form.form__form(name="sign-up-course" method="get" action="")
              .form__step
                .form__title Как тебя зовут?
                .form__row
                  input.input(placeholder="Твое имя").form__row-input
                  +button(label, "icon", "arrow-forward").form__row-button(name="next")
              .form__step
                .form__title Вася, оставь телефон для связи
                .form__row
                  input.input(type="tel" placeholder="+7(").form__row-input
                  +button("Записаться", mods, icon=false, "button").form__row-button(name="next")
                p.form__hint На этот номер придет пароль от твоего кабинета
            .form__bottom
              p.form__bottom-descr оплатить курс можно сразу после завершения регистрации или после уточнения деталей с&nbsp;менеджером курсов
              .form__bottom-inner
                p.form__bottom-summ 4000<sup>руб/мес</sup>
                p.form__bottom-total Общая стоимость 16 000 руб.

  else if type === "confirm"
    include confirm-form.pug
  else if type === "consult"
    include consult-form.pug
  else if type === "login"
    include login-form.pug
